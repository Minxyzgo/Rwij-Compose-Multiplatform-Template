<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/backrepeat" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbarAlwaysDrawVerticalTrack="true" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5px" android:text="i:menus.mods.headerInfoAndroid"/>
            <TextView android:textStyle="bold" android:textColor="@color/notecolour" android:id="@+id/modExtraTextInfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5px"/>
            <TextView android:textSize="8pt" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/messageInfo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            <LinearLayout android:orientation="vertical" android:id="@+id/modsContainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15px">
                <Button android:textSize="10sp" android:id="@+id/modsCreateFolder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="i:menus.mods.createFolder"/>
                <Button android:textSize="10sp" android:id="@+id/modsImportMod" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="i:menus.mods.importMod"/>
                <Button android:textSize="10sp" android:id="@+id/modsLinkModFolder" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="i:menus.mods.linkModFolder"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15px">
                <Button android:id="@+id/modsSave" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="i:menus.mods.save"/>
                <Button android:id="@+id/modsReload" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="i:menus.mods.reload"/>
                <Button android:id="@+id/modsClose" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="i:menus.mods.cancel"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
